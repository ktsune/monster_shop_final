<%= form_for @user do |f| %>

  <%= f.label :name %>:<br>
  <%= f.text_field :name %><br>

  <%= f.fields_for :addresses do |addresses_form| %>
  
      <%= addresses_form.label :address %>:<br>
      <%= addresses_form.text_field :address %><br>

      <%= addresses_form.label :city %>:<br>
      <%= addresses_form.text_field :city %><br>

      <%= addresses_form.label :state %>:<br>
      <%= addresses_form.text_field :state %><br>

      <%= addresses_form.label :zip %>:<br>
      <%= addresses_form.text_field :zip %><br>

  <%= f.label :email %>:<br>
  <%= f.email_field :email %><br>

  <%= f.label :password %>:<br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>:<br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit 'Register' %>

  <% end %>
<% end %>
