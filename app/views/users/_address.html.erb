<h1>Profile for <%= @user.name %></h1>

<h5>Email: <%= @user.email %></h5>
====================================<br>
<% unless current_admin?  %>
  <%= button_to "My Addresses", "/profile/addresses", method: :get %>
<% end %>
====================================<br>


<% @user.addresses.map do |address_info| %>
  <p>Street: <%= address_info.address %></p>
  <p>City: <%= address_info.city %></p>
  <p>State: <%= address_info.state %></p>
  <p>Zip: <%= address_info.zip %></p>
====================================<br>
<% end %>
