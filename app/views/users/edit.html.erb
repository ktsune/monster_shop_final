<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.fields_for :addresses do |addresses_form| %>
      <%= addresses_form.label :address %>
      <%= addresses_form.text_field :address %>

      <%= addresses_form.label :city %>
      <%= addresses_form.text_field :city %>

      <%= addresses_form.label :state %>
      <%= addresses_form.text_field :state %>

      <%= addresses_form.label :zip %>
      <%= addresses_form.text_field :zip %>

  <%= f.submit 'Update Profile' %>
  <% end %>
<% end %>
