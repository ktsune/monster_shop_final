<%= form_tag "/profile/#{@address.id}", method: :patch do %>

  <%= label_tag :nickname %>:<br>
  <%= text_field_tag(:nickname, @address.nickname) %><br>

  <%= label_tag :address %>:<br>
  <%= text_field_tag(:address, @address.address) %><br>

  <%= label_tag :city %>:<br>
  <%= text_field_tag(:city, @address.city) %><br>

  <%= label_tag :state %>:<br>
  <%= text_field_tag(:state, @address.state) %><br>

  <%= label_tag :zip %>:<br>
  <%= text_field_tag(:zip, @address.zip) %><br>

  <%= submit_tag 'Submit' %>

<% end %>
