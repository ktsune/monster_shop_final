<%= form_tag "/profile/#{@address.id}", method: :patch do %>

  <%= label_tag :nickname %>
  <%= text_field_tag(:nickname, @address.nickname) %>

  <%= label_tag :address %>
  <%= text_field_tag(:address, @address.address) %>

  <%= label_tag :city %>
  <%= text_field_tag(:city, @address.city) %>

  <%= label_tag :state %>
  <%= text_field_tag(:state, @address.state) %>

  <%= label_tag :zip %>
  <%= text_field_tag(:zip, @address.zip) %>

  <%= submit_tag 'Submit' %>

<% end %>
